IF NOT EXISTS (SELECT * FROM INFORMATION_SCHEMA.TABLES WHERE TABLE_NAME = '/* %PREFIX% */users')
BEGIN
	CREATE TABLE /* %PREFIX% */users (
		id int PRIMARY KEY IDENTITY,
		name nvarchar(255),
		"user" nvarchar(255),
		description nvarchar(255),
		password nvarchar(255),
		email nvarchar(255),
		language char(2),
		status int DEFAULT 1,
		groups nvarchar(255),
		first int,
		last int
	);
END
